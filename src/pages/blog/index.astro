---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Nav from '../../components/Nav.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<BaseLayout
  title="Blog — Juliana Capucci | Psicoterapia Online"
  description="Artigos sobre saúde mental, Terapia Cognitivo-Comportamental e bem-estar emocional por Juliana Capucci, psicóloga."
>
  <Nav />

  <section class="blog-listing">
    <div class="blog-header">
      <p class="section-label">Blog</p>
      <h1 class="section-title">Artigos sobre<br><em>saúde mental.</em></h1>
    </div>

    <div class="blog-grid">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="blog-card reveal">
          <time datetime={post.data.date.toISOString()}>
            {post.data.date.toLocaleDateString('pt-BR', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
          <h2>{post.data.title}</h2>
          <p>{post.data.description}</p>
          <div class="blog-tags">
            {post.data.tags.map((tag) => (
              <span class="pill">{tag}</span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  .blog-listing {
    padding: clamp(8rem, 12vw, 10rem) var(--container-padding) var(--section-spacing);
  }

  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    max-width: 960px;
    margin: 0 auto;
  }

  .blog-card {
    background: var(--white);
    border: 1px solid var(--border-light);
    border-radius: var(--radius-md);
    padding: 2.5rem;
    text-decoration: none;
    color: inherit;
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 36px rgba(196, 144, 138, 0.1);
  }

  .blog-card time {
    font-size: 0.72rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--sage);
  }

  .blog-card h2 {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-weight: 400;
    margin: 0.8rem 0;
    line-height: 1.3;
    color: var(--warm-dark);
  }

  .blog-card p {
    font-size: 0.85rem;
    color: var(--text-light);
    line-height: 1.7;
    font-weight: 300;
    margin-bottom: 1.2rem;
  }

  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .blog-tags .pill {
    background: var(--cream-warm);
    border: 1px solid var(--border-light);
    color: var(--mauve);
    font-size: 0.7rem;
  }

  @media (max-width: 768px) {
    .blog-listing {
      padding: 7rem 1.5rem 4rem;
    }

    .blog-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
